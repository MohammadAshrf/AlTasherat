<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#673AB7"/> <!-- Background color of the TabLayout -->
        </shape>
    </item>
    <item android:top="2dp"> <!-- You can adjust this value to move the line up or down -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color of the line -->
            <size android:height="2dp"/> <!-- Thickness of the line -->
        </shape>
    </item>

</layer-list>

<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AlTasherat" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Bg_bt</item> <!-- Dark Blue Background -->
        <item name="colorOnPrimary">@color/white</item> <!-- White Text -->
        <item name="colorSecondary">@color/Accent</item> <!-- Teal Elements -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/BgCard</item> <!-- Dark Blue Card Background -->
        <item name="android:colorBackground">@color/Bg</item> <!-- Dark Blue Main Background -->
        <item name="colorError">@color/error</item> <!-- Error Color -->

        <item name="android:windowIsTranslucent">true</item>

    </style>

    // ------------------------------------------- Fonts -------------------------------------------

    <style name="Font" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name="Font.Medium" parent="Font">
        <item name="android:fontFamily">@font/app_font_medium</item>
    </style>

    <style name="Font.Bold" parent="Font">
        <item name="android:fontFamily">@font/app_font_bold</item>
    </style>

    // ------------------------------------------- TextView ----------------------------------------

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/Font</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textAppearance">@style/Font.Medium</item>
    </style>

    <style name="TextView.Bold" parent="TextView">
        <item name="android:textAppearance">@style/Font.Bold</item>
    </style>

    <style name="TextView.Error" parent="TextView">

    </style>

    // ------------------------------------------- EditText----------------------------------------

    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/custom_edit_text_bg</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/Font</item>
        <item name="fontStyle">normal</item>
    </style>


    // ------------------------------------------- Button ------------------------------------------

    <style name="Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAppearance">@style/Font.Bold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_4sdp</item>
    </style>

    <style name="Button.OutLine" parent="Button">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Delete" parent="Button">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    // ------------------------------------------- CardView ----------------------------------------

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardBackgroundColor">@color/BgCard</item>
    </style>


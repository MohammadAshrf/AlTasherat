    //------------------- Custom TextAppearance for BottomNavigationView --------------------//

    <style name="CustomBottomNavigationViewText" parent="TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAppearance">@style/Font.Bold</item>
    </style>


    <style name="SmallTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAppearance">@style/Font.Bold</item>
        <item name="android:textSize">15sp</item>

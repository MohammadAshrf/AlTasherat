<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AlTasherat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AlTasherat" parent="Base.Theme.AlTasherat" />

    // ------------------------------------------- Fonts -------------------------------------------

    <style name="Font" parent="@android:style/TextAppearance" />

    <style name="Font.Black" parent="Font">
        <item name="android:fontFamily">@font/app_font_black</item>
    </style>

    <style name="Font.Bold" parent="Font">
        <item name="android:fontFamily">@font/app_font_bold</item>
    </style>

    <style name="Font.Heavy" parent="Font">
        <item name="android:fontFamily">@font/app_font_heavy</item>
    </style>

    <style name="Font.Medium" parent="Font">
        <item name="android:fontFamily">@font/app_font_medium</item>
    </style>

    <style name="Font.Regular" parent="Font">
        <item name="android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name="Font.SemiBold" parent="Font">
        <item name="android:fontFamily">@font/app_font_semibold</item>
    </style>

    <style name="Font.Thin" parent="Font">
        <item name="android:fontFamily">@font/app_font_thin</item>
    </style>

    // ------------------------------------------- TextView ----------------------------------------

    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/Font</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textAppearance">@style/Font.Medium</item>
    </style>

    <style name="TextView.Bold" parent="TextView">
        <item name="android:textAppearance">@style/Font.Bold</item>
    </style>

    <style name="TextView.Heavy" parent="TextView">
        <item name="android:textAppearance">@style/Font.Heavy</item>
    </style>

    <style name="TextView.Regular" parent="TextView">
        <item name="android:textAppearance">@style/Font.Regular</item>
    </style>

    <style name="TextView.SemiBold" parent="TextView">
        <item name="android:textAppearance">@style/Font.SemiBold</item>
    </style>

    <style name="TextView.Thin" parent="TextView">
        <item name="android:textAppearance">@style/Font.Thin</item>
    </style>

    <style name="TextView.Black" parent="TextView">
        <item name="android:textAppearance">@style/Font.Black</item>
    </style>

    <style name="TextView.Error" parent="TextView">
        <item name="android:textColor">@color/Error</item>
    </style>

    // ------------------------------------------- EditText----------------------------------------

    <style name="EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_edittext_register_login</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/Font.Regular</item>
    </style>


    // ------------------------------------------- Button ------------------------------------------

    <style name="Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAppearance">@style/Font.Bold</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_4sdp</item>
    </style>

    <style name="Button.OutLine" parent="Button">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/Bg_bt</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Delete" parent="Button">
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/Error</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    //---------------------------------------tab layout -----------------------------//

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@null</item>
        <item name="tabIndicator">@android:color/transparent</item>
    </style>

    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="TagEditor.Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TagEditor.InputHint" parent="TextAppearance.Design.Hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    //--------------------------------------- TextInputLayout -----------------------------//

    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="hintTextAppearance">@style/Font.Regular</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_16sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_16sdp</item>
        <item name="boxStrokeColor">@color/icon</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_16sdp</item>
        <item name="android:textColorHint">@color/textInputIcon</item>
        <item name="boxCornerRadiusTopStart">@dimen/_16sdp</item>
        <item name="startIconTint">@color/icon</item>
    </style>


    //--------------------------------------- TextInputEditText -----------------------------//

    <style name="TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:padding">@dimen/_14sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:drawablePadding">@dimen/_6sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/Font.Regular</item>
    </style>

    //------------------- Custom TextAppearance for BottomNavigationView --------------------//

    <style name="CustomBottomNavigationViewText" parent="TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAppearance">@style/Font.Bold</item>
    </style>


    <style name="SmallTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAppearance">@style/Font.Bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Primary</item>
    </style>
</resources>


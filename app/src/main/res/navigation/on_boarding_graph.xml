<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/on_boarding_grapg"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/splashFragment"
        android:name="com.solutionplus.altasherat.features.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFirstFragment"
            app:destination="@id/onBoardingFragment"
            />
        <action
            android:id="@+id/action_splashFragment_to_homeActivity"
            />
    </fragment>

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.solutionplus.altasherat.features.onboarding.OnBoardingFragment"
        tools:layout="@layout/fragment_on_boarding"/>


</navigation>
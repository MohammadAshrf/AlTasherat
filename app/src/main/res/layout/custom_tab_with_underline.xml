<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/underline_view"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginTop="0dp"
        android:background="@color/Accent"
        app:layout_constraintEnd_toEndOf="@+id/tab_text"
        app:layout_constraintStart_toStartOf="@+id/tab_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tab_text"
        style="@style/TextView.Heavy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/Bg"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underline_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/new_account" />
</androidx.constraintlayout.widget.ConstraintLayout>
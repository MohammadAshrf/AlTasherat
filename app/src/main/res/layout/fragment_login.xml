<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wight"
    tools:context=".features.login.presentation.ui.fragment.login.LoginFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_Phone_Client"
        style="@style/EditText"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/phone_background"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <Spinner
        android:id="@+id/et_CountruCode"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/shape_spinner_background"
        android:entries="@android:array/postalAddressTypes"
        app:layout_constraintBottom_toBottomOf="@+id/et_Phone_Client"
        app:layout_constraintEnd_toStartOf="@+id/et_Phone_Client"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_Phone_Client" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="35dp"
        app:boxBackgroundColor="@color/wight"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/icon"
        app:layout_constraintEnd_toEndOf="@+id/et_Phone_Client"
        app:layout_constraintStart_toStartOf="@+id/et_CountruCode"
        app:layout_constraintTop_toBottomOf="@+id/et_CountruCode"
        app:startIconDrawable="@drawable/ic_lock"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/icon"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_password"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:hint="    ادخل كلمه المرور"
        android:inputType="textPassword"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_forgot_password"
        style="@style/TextView"
        android:text="نسيت كلمه المرور؟"
        android:textSize="14sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout2" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Font.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الجوال"
        android:textColor="@color/text"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_Phone_Client"
        app:layout_constraintEnd_toEndOf="@+id/et_Phone_Client" />

    <TextView
        android:id="@+id/textView3"
        style="@style/Font.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="كلمه المرور"
        android:textColor="@color/text"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/_12sdp">

    <View
        android:id="@+id/rectangle_language"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_3sdp"
        android:layout_gravity="center"
        android:background="@color/Primary"
        />

    <TextView
        android:id="@+id/choosetxt"
        style="@style/TextView.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/sign_in"
        android:layout_marginTop="@dimen/_3sdp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_126sdp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/image_privacy_policy" />

    <TextView
        android:id="@+id/textView9"
        style="@style/TextView.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"
        android:text="@string/you_have_to_sign_in" />

    <Button
        android:id="@+id/btnLoginAndSignup"
        style="@style/Button"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/svgexport620220821t132423"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_50sdp"
        android:paddingEnd="@dimen/_50sdp"
        android:drawableTint="#FFFFFF"
        android:elevation="@dimen/_8sdp"
        android:text="@string/SignIn"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:iconTint="#FFFFFF"
        tools:ignore="RtlHardcoded"
         />

</LinearLayout>